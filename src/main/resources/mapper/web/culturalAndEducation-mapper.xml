<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--&lt;!&ndash; 해당 파일에 모든 쿼리문을 작성 &ndash;&gt;-->
<mapper namespace="culturalAndEducationMapper">
    <resultMap id="event" type="com.green.Library.web.culturalAndEducation.vo.EventBoardVO">
        <id column="EVENT_CODE" property="eventCode"/>
        <result column="EVENT_TITLE" property="eventTitle"/>
        <result column="TEACHER" property="teacher"/>
        <result column="TARGET" property="target"/>
        <result column="EVENT_OPEN" property="eventOpen"/>
        <result column="EVENT_CLOSE" property="eventClose"/>
        <result column="TO_DATE" property="toDate"/>
        <result column="FROM_DATE" property="fromDate"/>
        <result column="PERSONNEL" property="personnel"/>
        <result column="MAXIMUM_PERSON" property="maximumPerson"/>
        <result column="STATUS_INDEX" property="statusIndex"/>
        <result column="BOARD_NO" property="boardNo"/>
    </resultMap>

    <!--  게시글 등록  -->
    <insert id="culInsertBoard">
        INSERT INTO BOARD(
        BOARD_TITLE
        , CONTENT
        , BOARD_DATE
        , BOARD_TYPE
        , USER_CODE
        , BOARD_CNT
        , BOARD_NO
        )
        VALUES(
        #{boardTitle}
        ,#{content}
        ,#{boardDate}
        ,#{boardType}
        ,#{userCode}
        ,#{boardCnt}
        ,#{boardNo}
        )
    </insert>


    <!--  등록한 게시물 정보 리스트  -->
    <select id="culSelectBoardList" resultMap="boardMapper.board">
        SELECT
            BOARD.BOARD_NO
            , BOARD_TITLE
            , CONTENT
            , DATE_FORMAT(BOARD_DATE, '%Y-%m-%d') AS BOARD_DATE
            , BOARD.USER_CODE
            , BOARD_CNT
            , USER_ID
            , ATTACHED_CODE
            , ORIGIN_FILE_NAME
            , ATTACHED_FILE_NAME
            , IS_MAIN
            , BOARD_TYPE
        FROM board INNER JOIN USERS
        ON BOARD.USER_CODE = USERS.USER_CODE
        INNER JOIN ATTACHED_FILE AS FILE
        ON BOARD.BOARD_NO = FILE.BOARD_NO
        WHERE BOARD_TYPE = ${boardType}
        <if test='searchValue != null and !searchValue.equals("")'>
            where ${searchType} LIKE CONCAT('%', #{searchValue} , '%')
        </if>
        <if test='fromDate != null and !fromDate.equals("")'>
            AND DATE_FORMAT(BOARD_DATE, '%Y-%m-%d') = #{fromDate}
        </if>
        <if test='toDate != null and !toDate.equals("")'>
            AND DATE_FORMAT(BOARD_DATE, '%Y-%m-%d') = #{toDate}
        </if>
        ORDER BY BOARD_NO DESC
        LIMIT ${displayDataCnt} OFFSET ${displayDataCnt * (nowPage - 1)}
    </select>




    <!--  이미지 등록  -->
    <insert id="culInsertFileList">
        INSERT INTO ATTACHED_FILE(
        ORIGIN_FILE_NAME
        ,ATTACHED_FILE_NAME
        ,IS_MAIN
        ,BOARD_NO
        )
        VALUES
        <foreach collection="fileList" item="file" separator=",">
            (#{file.originFileName}
            ,#{file.attachedFileName}
            ,#{file.isMain}
            ,#{file.boardNo})
        </foreach>
    </insert>

    <!--  게시판 개수 + 1  -->
    <select id="culIsNullBoardNo" resultType="int">
        SELECT CASE WHEN
        MAX(BOARD_NO) IS NULL
        THEN 1
        ELSE MAX(BOARD_NO) + 1
        END
        FROM BOARD
    </select>

    <!--  게시물 상세보기  -->
    <select id="culSelectBoardDetail" resultMap="boardMapper.board">
        SELECT
            BOARD.BOARD_NO
            ,BOARD.USER_CODE
            ,BOARD_TITLE
            ,DATE_FORMAT(BOARD_DATE, '%Y-%m-%d') AS BOARD_DATE
            ,BOARD_CNT
            ,CONTENT
            ,USER_ID
            ,ATTACHED_FILE_NAME
            ,IS_MAIN
        FROM BOARD
        INNER JOIN USERS
        ON BOARD.USER_CODE = USERS.USER_CODE
        INNER JOIN ATTACHED_FILE AS FILE
        ON BOARD.BOARD_NO = FILE.BOARD_NO
        WHERE BOARD.BOARD_NO = #{boardNo}
    </select>

    <!--  게시판 개수  -->
    <select id="culCountBoard" resultType="int">
        SELECT COUNT (BOARD_NO)
        FROM BOARD
    </select>

    <!--  조회수 증가  -->
    <update id="culBoardCntUp">
        UPDATE BOARD
        SET BOARD_CNT = BOARD_CNT + 1
        WHERE BOARD_NO
    </update>

    <!--  게시판 삭제  -->
    <delete id="culDeleteBoard">
        DELETE FROM BOARD
        WHERE BOARD_NO = #{boardNo}
    </delete>

    <!--  게시판 수정  -->
    <update id="culUpdateBoard">
        UPDATE BOARD
        SET
        BOARD_TITLE = #{boardTitle}
        ,CONTENT = #{content}
        WHERE BOARD_NO = #{boardNo}
    </update>




<!--  ///////////////////////////////이벤트 보드//////////////////////////////  -->
    <insert id="insertEventBoard">
        INSERT INTO EVENT_TABLE(
            EVENT_TITLE
            ,TEACHER
            ,TARGET
            ,EVENT_OPEN
            ,EVENT_CLOSE
            ,TO_DATE
            ,FROM_DATE
            ,PERSONNEL
            ,MAXIMUM_PERSON
            ,STATUS_INDEX
        )VALUES(
            #{eventTitle}
            #{teacher}
            #{target}
            #{eventOpen}
            #{eventClose}
            #{toDate}
            #{fromDate}
            #{personnel}
            #{maximumPerson}
            #{statusIndex}
        )
    </insert>
</mapper>














