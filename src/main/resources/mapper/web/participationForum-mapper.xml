    <insert id="insertBoard">
        INSERT INTO BOARD (
            BOARD_NO
            , BOARD_TITLE
            , CONTENT
            , BOARD_DATE
            , BOARD_TYPE
            , USER_CODE
            , BOARD_CNT
            , ATTACHED_FILE_NAME
        ) VALUES (
            #{boardNo}
            , #{boardTitle}
            , #{content}
            , #{boardDate}
            , #{boardType}
            , #{userCode}
            , #{boardCnt}
            , #{attachedFileName}
        )
    </insert>

    <!-- 공지사항 조회-->
    <select id="selectNotice" resultMap="board">
        SELECT BOARD.BOARD_NO
            , BOARD_TITLE
            , CONTENT
            , BOARD_DATE
            , BOARD.USER_CODE
            , USERS.USER_NAME
            , BOARD_CNT
        FROM BOARD INNER JOIN USERS
        ON BOARD.USER_CODE = USERS.USER_CODE
    </select>

    <!-- 조회수 증가-->
    <update id="updateCnt">
        UPDATE BOARD
        SET BOARD_CNT = BOARD_CNT + 1
        WHERE BOARD_NO = #{boardNo}
    </update>

    <!-- 공지사항 상세조회-->
