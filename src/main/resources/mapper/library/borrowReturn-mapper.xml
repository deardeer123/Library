    <!-- 이용자의 대출 정보 조회-->
    <select id="selectBorrowInfo" resultMap="memberMapper.users">
        SELECT CARD_NUM
            , USER_INTRO
            , USER_CODE
            , USER_NAME
            , USER_TEL
            , BR_CODE
            , BORROW_DATE
            , RETURN_YN
            , EX_RETURN_DATE
            , MC.RT_CODE
            , RETURN_DATE
            , BR.BOOK_CODE
        FROM USERS AS U
        LEFT JOIN BOOK_BORROW AS BB
        ON U.BR_CODE = BB.BR_CODE
        LEFT JOIN BOOK_RETURN AS BR
        ON MC.RT_CODE = BR.RT_CODE
        WHERE MC.USER_CODE = #{memberNum}
        ORDER BY BORROW_DATE DESC
    </select>

